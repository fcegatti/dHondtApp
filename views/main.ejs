<!DOCTYPE html>
<html>
<head>
  <title>Cáculo de escaños</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Calculadora de escaños para las elecciones generales, atonómicas, municipales y europeas en Española. Personaliza los partidos políticos, distribuye los votos y visualiza resultados en tiempo real.">
  <meta name="author" content="federico gatti">
  <link rel="stylesheet" type="text/css" href="/styles/normalize.css">
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <header>
    <h1>Contador de escaños</h1>
    <nav>
      <select id="electionType" name="electionType">
        <option value="">-Elecciones-</option>
        <option value="generales">Generales</option>
        <option value="autonomicas">Autonómicas</option>
        <option value="municipales">Municipales</option>
        <option value="europeas">Europeas</option>
      </select>
    
      <select id="chamber" name="chamber" disabled>
        <option value="">-Cámara-</option>
        <option value="congreso">Congreso</option>
        <option value="senado">Senado</option>
      </select>

      <select id="autonomousCommunity" name="autonomousCommunity" disabled>
        <option value="">-Comunidad Autónoma-</option>
      </select>
    
      <select id="province" name="province" disabled>
        <option value="">-Provincia-</option>
      </select>
    </nav>
    
  </header>
    
  <main>
    <div class="container">
      <section id="ui-section">
        <div class="messages">
          <p class="election-msg"></p>
          <p class="chamber-msg"></p>
          <p class="ac-msg"></p>
        </div>
        <div id="party-entry" class="hide">
          <h2 id="party-entry-title">Ingresar partidos</h2>
          <!-- Lista de partidos y formulario de votos aquí -->
          
          <!-- Formulario de entrada de partidos y colores -->
          <form id="addParty">
            <label for="party">Partido:</label>
            <input type="text" id="party" name="party" required>
            <label for="color">Color:</label>
            <input type="color" id="color" name="color" required>
            <label for="logo">Logo:</label>
            <input type="text" id="logo" name="logo">
            <input type="submit" value="Submit">
          </form>
        </div>
        <div id="party-list" class="hide">
          <h2 id="party-list-title">Partidos de ${ac}</h2>
          <ul id="party-list-items">
          </ul>
        </div>
        <div id="voting-form"></div>
      </section>

      <section class="seats-graph-section">
        <h2 id="seats-title">ESCAÑOS(350)</h2>
        <!-- Gráfico de escaños --> 
        <svg id="seats-chart" width="500" height="500">
          <defs>
            <linearGradient id="seatGradient" x1="0" y1="0" x2="1" y2="0" spreadMethod="pad">
                <stop offset="0%" stop-color="green" stop-opacity="1"></stop>
                <stop offset="50%" stop-color="red" stop-opacity="1"></stop>
            </linearGradient>
          </defs>
        </svg>      
      </section>

      <section class="region-map-section">
        <h2 id="region-map-title">España</h2>
        <p id="region-map-placeholder">El mapa de la región se mostrará aquí</p>
        <!-- Mapa de la provincia aquí -->
      </section>
    </div>
  </main>

  <div id="modal" class="modal">
    <div class="modal-content">
      <p id="modal-message"></p>
      <button id="modal-close">Volver</button>
      <button id="continue-button">Continuar</button>
    </div>
  </div>
  <script src="https://d3js.org/d3.v7.min.js"></script>
  <script src="/helpers/viewHelpers.js"></script>
  <script src="/seatsChart.js"></script>
  <script src="/modal.js"></script>
  <script src="/seatsHandler.js"></script>
  <script src="/appController.js"></script>
</body>
</html>